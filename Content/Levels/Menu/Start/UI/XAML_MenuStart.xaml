<UserControl x:Class="launch.ParentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:launch="clr-namespace:launch"
    HorizontalAlignment="Stretch" 
    VerticalAlignment="Stretch">



    <Grid>
        <launch:Loading x:Name="Loading" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
        />
    </Grid>

    <!-- Start -->
    <Grid x:Name="Start" Visibility="Collapsed">
        <TextBlock Text="STARFALL" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold"/>
        <TextBlock Text="Press [ SPACE ] to continue" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40" FontSize="24"/>
    </Grid>

    <!-- Loading Screen -->
    <Grid x:Name="LoadingScreen" Background="Blue" Visibility="Collapsed">
        <TextBlock Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />  
    </Grid>
</UserControl>