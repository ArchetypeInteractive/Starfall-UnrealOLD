<UserControl x:Class="hud.Radar"
    x:Name="Radar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas>
        <Ellipse
            Width="150"
            Height="150"
            Stroke="Green"
            Fill="Transparent"
            StrokeThickness="2"
